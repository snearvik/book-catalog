			<div class="col-md-auto">
				<input class="btn btn-primary" type="submit" name="edit" value="Сохранить" />
			</div>
			<div class="col-md-auto">
				<a class="btn btn-outline-primary" href="{{ path('book_index') }}" role="button">Отмена</a>
			</div>
			
		</div>
	</div>
	{{ form_end(edit_form) }}
	
	
