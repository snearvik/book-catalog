{% extends 'base.html.twig' %}

{% block body %}
    <h1>Books list</h1>

    <table>
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Наименование</th>
                <th>Год издания</th>
                <th>ISBN</th>
                <th>Количество страниц</th>
                {#<th>Обложка</th>#}
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                {#<td><a href="{{ path('book_show', { 'id': book.id }) }}">{{ book.id }}</a></td>#}
                <td>{{ book.name }}</td>
                <td>{{ book.publishingYear }}</td>
                <td>{{ book.isbn }}</td>
                <td>{{ book.pageCount }}</td>
                {#<td><img src="{{ asset('uploads/covers/' ~ book.cover) }}" alt="img" width=30%/></td>#}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('book_show', { 'id': book.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('book_edit', { 'id': book.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('book_new') }}">Create a new book</a>
        </li>
    </ul>
{% endblock %}
